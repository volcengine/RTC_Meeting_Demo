<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="#1D2129">

    <ImageView
        android:id="@+id/room_bottom_mic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:src="@drawable/mic_on"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/room_bottom_camera"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="麦克风"
        android:textColor="#86909C"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/room_bottom_mic"
        app:layout_constraintRight_toRightOf="@id/room_bottom_mic"
        app:layout_constraintTop_toBottomOf="@id/room_bottom_mic" />

    <ImageView
        android:id="@+id/room_bottom_camera"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:src="@drawable/camera_on"
        app:layout_constraintLeft_toRightOf="@id/room_bottom_mic"
        app:layout_constraintRight_toLeftOf="@id/room_bottom_screen_share"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="摄像头"
        android:textColor="#86909C"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/room_bottom_camera"
        app:layout_constraintRight_toRightOf="@id/room_bottom_camera"
        app:layout_constraintTop_toBottomOf="@id/room_bottom_camera" />

    <ImageView
        android:id="@+id/room_bottom_screen_share"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:src="@drawable/screen_share_off"
        app:layout_constraintLeft_toRightOf="@id/room_bottom_camera"
        app:layout_constraintRight_toLeftOf="@id/room_bottom_participants"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="共享"
        android:textColor="#86909C"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/room_bottom_screen_share"
        app:layout_constraintRight_toRightOf="@id/room_bottom_screen_share"
        app:layout_constraintTop_toBottomOf="@id/room_bottom_screen_share" />

    <ImageView
        android:id="@+id/room_bottom_participants"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:src="@drawable/meeting_participants"
        app:layout_constraintLeft_toRightOf="@id/room_bottom_screen_share"
        app:layout_constraintRight_toLeftOf="@id/room_bottom_more_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="参会人"
        android:textColor="#86909C"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/room_bottom_participants"
        app:layout_constraintRight_toRightOf="@id/room_bottom_participants"
        app:layout_constraintTop_toBottomOf="@id/room_bottom_participants" />

    <ImageView
        android:id="@+id/room_bottom_more_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:src="@drawable/func_more"
        app:layout_constraintLeft_toRightOf="@id/room_bottom_participants"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/room_bottom_more_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更多"
        android:textColor="#86909C"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/room_bottom_more_iv"
        app:layout_constraintRight_toRightOf="@id/room_bottom_more_iv"
        app:layout_constraintTop_toBottomOf="@id/room_bottom_more_iv" />
</androidx.constraintlayout.widget.ConstraintLayout>