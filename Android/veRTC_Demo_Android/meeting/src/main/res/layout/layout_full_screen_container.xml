<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    tools:ignore="ContentDescription">

    <FrameLayout
        android:id="@+id/full_screen_render_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/full_screen_share"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/screen_share_on" />

        <TextView
            android:id="@+id/full_screen_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            tools:text="bytedance" />

        <TextView
            android:id="@+id/full_screen_host"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="主持人"
            android:textColor="#4080FF"
            android:textSize="12sp"
            android:visibility="gone"
            tools:visibility="visible" />
    </LinearLayout>

    <ImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/full_screen_quit" />

    <TextView
        android:id="@+id/full_screen_stat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/room_stat_bg"
        android:lineSpacingExtra="5dp"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        tools:text="统计信息" />
</FrameLayout>